{
  "mode": "production",
  "port": 3000,
  "log4js": {
    "appenders": {
      "access": {
        "type": "dateFile",
        "filename": "log/access.log"
      },
      "error": {
        "type": "dateFile",
        "filename": "log/error.log"
      },
      "system": {
        "type": "dateFile",
        "filename": "log/system.log"
      },
      "console": {
        "type": "console"
      },
      "stdout": {
        "type": "stdout"
      }
    },
    "categories": {
      "default": {
        "appenders": ["console"],
        "level": "INFO"
      },
      "access": {
        "appenders": ["access", "console", "stdout"],
        "level": "INFO"
      },
      "system": {
        "appenders": ["system", "console", "stdout"],
        "level": "ALL"
      },
      "error": {
        "appenders": ["error", "console", "stdout"],
        "level": "WARN"
      }
    }
  }
}
